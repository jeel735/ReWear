<% layout("/layouts/boilerplate") %>

<div class="header">
  <h1>Welcome, <%= user.username %>!</h1>
</div>
<!-- User Profile Section -->
<section class="user-profile glass-card">
  <img
    src="/images/user-avatar.png"
    alt="User Avatar"
    class="user-pic"
    onerror="this.src='https://img.icons8.com/ios-filled/100/user-male-circle.png';"
  />
  <div>
    <h2>User Dashboard</h2>
    <p>Welcome, <strong><%= user.username %></strong></p>
    <p>Email: <%= user.email %></p>
    <p>Points: <%= user.points %></p>
  </div>
</section>


<div class="tabs-container">
  <div class="tabs">
    <div class="tab active" data-tab="uploaded">Uploaded Items</div>
    <div class="tab" data-tab="ongoing" data-link="/user/<%= user._id %>/swaps">Ongoing Swaps</div>
    <div class="tab" data-tab="completed">Completed Swaps</div>
  </div>
</div>
<!-- UPLOADED ITEMS -->
<div id="uploaded" class="tab-content active card">
  <div class="section-title">Your Uploaded Items</div>
  <% if (!userItems || userItems.length === 0) { %>
    <p>You havenâ€™t uploaded any items yet.</p>
  <% } else { %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4 mt-3">
      <% userItems.forEach(item => {
        const imageUrl = item.images?.[0]?.url || item.image?.url || 'https://via.placeholder.com/400x300?text=No+Image';
      %>
        <div class="col listing-wrapper">
          <a href="/listings/<%= item._id %>" style="text-decoration: none;">
            <div class="card listing-card">
              <img src="<%= imageUrl %>?t=<%= Date.now() %>"
                   class="card-img-top"
                   style="height: 20rem; object-fit: cover;">
              <div class="card-body">
                <h5 class="card-title"><%= item.title %></h5>
                <p class="card-text"><%= item.description %></p>
                <p class="card-text"><small>Category: <%= item.category %></small></p>
              </div>
            </div>
          </a>
          <div class="mt-2 text-center">
            <a href="/listings/<%= item._id %>/edit" class="btn btn-sm btn-light">Edit</a>
            <form action="/listings/<%= item._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<!-- ONGOING SWAPS (redirect) -->
<div id="ongoing" class="tab-content card">
  <div class="section-title">Ongoing Swaps</div>
 <% if (!pendingSwaps || pendingSwaps.length === 0) { %>
  <p>No ongoing swaps found.</p>
<% } else { %>
  <% pendingSwaps.forEach(swap => { %>
    <div class="item">
      <p><strong>Sent:</strong> <%= swap.senderItemId?.title || 'Unknown' %></p>
      <p><strong>Requested:</strong> <%= swap.receiverItemId?.title || 'Unknown' %></p>
      <p><strong>To:</strong> @<%= swap.receiverId?.username || 'Unknown' %></p>
      <p><strong>Status:</strong> <span style="color: orange;"><%= swap.status %></span></p>
      <p><small>Created: <%= new Date(swap.createdAt).toLocaleDateString() %></small></p>
    </div>
    <hr>
  <% }) %>
<% } %>

</div>

<!-- COMPLETED SWAPS -->
<div id="completed" class="tab-content card">
  <div class="section-title">Completed Swaps</div>
  <% if (!completedSwaps || completedSwaps.length === 0) { %>
    <p>No completed swaps yet.</p>
  <% } else { %>
    <% completedSwaps.forEach(swap => { %>
      <div class="item">
        <p><strong>Sent:</strong> <%= swap.senderItemId?.title || 'Unknown' %></p>
        <p><strong>Received:</strong> <%= swap.receiverItemId?.title || 'Unknown' %></p>
        <p><strong>Partner:</strong>
          @<%= (swap.senderId._id.toString() === user._id.toString()
                ? swap.receiverId.username
                : swap.senderId.username) %>
        </p>
        
   <p><strong>Status:</strong> 
  <% if (swap.status === 'pending') { %>
    <span style="color: #ffeb3b;"><strong><%= swap.status %></strong></span>
  <% } else if (swap.status === 'approved') { %>
    <span style="color: green;"><strong><%= swap.status %></strong></span>
  <% } else if (swap.status === 'rejected') { %>
    <span style="color: red;"><strong><%= swap.status %></strong></span>
  <% } else { %>
    <strong><%= swap.status %></strong>
  <% } %>
</p>


        <p>Date: <%= new Date(swap.updatedAt).toLocaleDateString() %></p>
      </div>
      <hr>
    <% }) %>
  <% } %>
</div>


<% if (currUser) { %>
  <div class="logout-container">
    <a href="/logout" class="logout-button">Log Out</a>
  </div>
<% } %>

<script>
  const tabs = document.querySelectorAll('.tab');
  const tabContents = document.querySelectorAll('.tab-content');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const link = tab.dataset.link;
      if (link) {
        return void (window.location = link);
      }
      tabs.forEach(t => t.classList.remove('active'));
      tab.classList.add('active');
      tabContents.forEach(c => c.classList.remove('active'));
      document.getElementById(tab.dataset.tab)?.classList.add('active');
    });
  });
</script>

