    font-weight: bold;
    background-color: #ffffff;
    color: #2c004c;
    border-radius: 8px;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .logout-button:hover {
    background-color: #dddddd;
