<% layout("/layouts/boilerplate") %>

<div class="row show-list">
    <div class="card-title mt-3 mb-3">
        <h3 class="listing-title">
            <%= listing.title %>
        </h3>
        <% if (listing.owner && listing.owner.username) { %>
            <span class="owner-name card-text">Owned by: <%= listing.owner.username %></span>
        <% } else { %>
            <span class="owner-name card-text">Owner Unknown</span>
        <% } %>
    </div>

    <div class="listing-card show-list-card">
        <% if (listing.images && listing.images.length > 0) { %>
            <% for (let img of listing.images) { %>
                <img src="<%= img.url %>" class="card-img-top show-img mb-2" alt="Image" style="max-height: 300px; object-fit: cover;">
            <% } %>
        <% } else { %>
            <img src="https://via.placeholder.com/400x300?text=No+Image" class="card-img-top show-img" alt="No Image">
        <% } %>

        <div class="show-card-body">
            <p class="card-text"><%= listing.description %></p>
            <% if (listing.price) { %>
                <p class="card-text">Price: â‚¹<%= listing.price.toLocaleString('en-IN') %></p>
            <% } %>
            <p class="card-text">Category: <%= listing.category %></p>
            <% if (listing.type) { %><p class="card-text">Type: <%= listing.type %></p><% } %>
            <% if (listing.size) { %><p class="card-text">Size: <%= listing.size %></p><% } %>
            <% if (listing.condition) { %><p class="card-text">Condition: <%= listing.condition %></p><% } %>
            <% if (listing.tags && listing.tags.length > 0) { %>
                <p class="card-text">Tags: <%= listing.tags.join(", ") %></p>
            <% } %>
        </div>
    </div>

    <% if (currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
        <div class="two-buttons mt-3">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-button">Edit</a>
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" class="mt-2">
                <button class="btn btn-dark delete-button">Delete</button>
            </form>
        </div>
    <% } %>

    <div class="mb-3 mt-4">
        <hr>
        <% if (currUser) { %>
            <h4>Leave a review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-growRotate">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="3" checked />
                        <input type="radio" id="rate1" name="review[rating]" value="1" />
                        <label for="rate1">1 star</label>
                        <input type="radio" id="rate2" name="review[rating]" value="2" />
                        <label for="rate2">2 stars</label>
                        <input type="radio" id="rate3" name="review[rating]" value="3" />
                        <label for="rate3">3 stars</label>
                        <input type="radio" id="rate4" name="review[rating]" value="4" />
                        <label for="rate4">4 stars</label>
                        <input type="radio" id="rate5" name="review[rating]" value="5" />
                        <label for="rate5">5 stars</label>
                    </fieldset>
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">This field cannot be empty!</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
        <% } else { %>
            <h6>Please login to leave a review.</h6>
        <% } %>
    </div>
<% if (listing.reviews && listing.reviews.length > 0) { %>
  <hr>
  <h4><b>All Reviews</b></h4>
  <div class="row">
    <% for (let review of listing.reviews) { %>
      <div class="card review-card mb-3">
        <div class="card-body">
          <h5 class="card-title author-name">
            <span><%= review.author.username[0] %></span>
            <span>
              <%= review.author.username %>
              <% if (listing.owner._id.toString() === review.author._id.toString()) { %>
                <span class="badge bg-primary">Owner</span>
              <% } %>
              <% if (currUser && currUser._id.toString() === review.author._id.toString()) { %>
                <span class="text-muted">(You)</span>
              <% } %>
            </span>
            <div class="mt-2" style="font-size: 12px;">
              <%= new Date(review.createdAt).toLocaleString('en-IN') %>
            </div>
          </h5>

          <p class="starability-result" data-rating="<%= review.rating %>"></p>
          <p class="card-text"><%= review.comment %></p>
        </div>

        <% if (currUser && currUser._id.toString() === review.author._id.toString()) { %>
          <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class="btn btn-sm btn-dark review-button mb-3 mt-3">Delete</button>
          </form>
        <% } %>
      </div>
    <% } %>
  </div>
<% } else { %>
  <p>No reviews yet.</p>
<% } %>

</div>